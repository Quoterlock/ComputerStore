@model List<ComputerStore.Models.Domains.Item>

<div class="container-flex">
    <div class="row g-2">
        @foreach(var item in Model)
        {
            <div class="col-lg-4 col-6" >
                <div class="card item-card-style item-block-style">
                    <img src="@Url.Action("DisplayImg", "Images", new { Id = item.Image.Id})" class="card-img-top img-fluid p-1" alt="@item.Image.Alt" />
                    <div class="card-body ">
                        <h5 class="card-title">@item.Name</h5>
                        <div class="container-flex mt-2">
                            <div class="row ">
                                <div class="col">
                                    <h4>@item.Price<span>$</span> </h4>
                                </div>
                                <div class="col text-end">
                                    <a href="AddItemToCart.html" class="btn active-btn">+</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
