@model List<ComputerStore.BusinessLogic.Domains.ItemModel>

@{
    string GetNameString(string name)
    {
        return name.Length <= 10 ? name : name.Substring(0, 20) + "...";
    }
}

<div class="container-flex">
    <div class="row g-2">
        @foreach(var item in Model)
        {
            <div class="col-lg-4 col-6">
                <a asp-action="Details" asp-controller="Items" asp-route-itemId="@item.Id" class="just-styless-link">
                    <div class="card item-card-style item-block-style">
                        <img height="200" src="data:image/jpeg;base64, @Convert.ToBase64String(item.Image.Bytes)" class="rounded-2 card-img-top p-1" alt="@item.Image.Alt" />
                        <div class="card-body">
                            <h5 class="card-title" style="height: 50px">@GetNameString(item.Name)</h5>
                            <div class="container-flex mt-2">
                                <div class="d-flex justify-content-between">
                                    <h4>@item.Price<span>$</span></h4>
                                    <a asp-action="Add" asp-controller="Cart" asp-route-itemId="@item.Id" class="btn active-btn">+</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
</div>
