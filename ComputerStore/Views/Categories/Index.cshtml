@model List<ComputerStore.BusinessLogic.Domains.CategoryModel>

<div class="container col-md-7 col-sm-12 mt-4">
    <div class="row">
        <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a asp-action="Index" asp-controller="Home" class="styless-link">Home</a>
                </li>
                <li class="breadcrumb-item">
                    <a asp-action="Index" asp-controller="Categories" class="styless-link">Categories</a>
                </li>
            </ol>
        </nav>
    </div>

    <div class="row mt-1 g-2">
        @foreach(var category in Model)
        {
            <a asp-action="Index" asp-controller="Items" asp-route-categoryId="@category.Id" class="styless-link col-lg-4 col-sm-6">
                <div class="category-block d-flex flex-column align-items-center justify-content-center">
                    <div>
                        @if (category.Thumbnail.Bytes != null)
                        {
                            <img class="mx-auto" src="data:image/png;base64, @Convert.ToBase64String(category.Thumbnail.Bytes)" alt="RAM" width="50" height="50">
                        }
                    </div>
                    <h5 class="text-center mt-2 styless-link">@category.Name</h5>
                </div>
            </a>
        }
    </div>
</div>