@page
@model LoginModel

<div class="row">
    <div class="col-lg-4 col-md-6 col-sm-12 mx-auto struct-block">
        <form id="account" method="post">
            <h4 class="text-center">Log-in</h4>
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="mb-3">
                <label for="" class="form-label">Email</label>
                <input asp-for="Input.Email" class="form-control textbox-style" autocomplete="username" aria-required="true" placeholder="name@example.com">
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="" class="form-label">Password</label>
                <input asp-for="Input.Password" class="form-control textbox-style" autocomplete="current-password" aria-required="true" placeholder="password">
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="checkbox mb-3">
                <label asp-for="Input.RememberMe" class="form-label">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div>
            <div class="d-flex flex-column text-center">
                <button id="login-submit" type="submit" class="btn active-btn mb-2">Login</button>
            </div>
            <div class="d-flex flex-column text-center">
                <p>
                    <a id="forgot-password" class="styless-link" asp-page="./ForgotPassword">Forgot your password?</a>
                </p>
                <p>
                    <a asp-page="./Register" class="styless-link" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                </p>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
