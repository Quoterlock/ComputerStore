@using ComputerStore.Utilities;
@model ComputerStore.Areas.Staff.ViewModels.RolesListViewModel

<div class="container-fluid">
    <div class="row">
        <h3 class="mb-3">Managers:</h3>
    </div>
    <div class="row">
        <div class="col-4">
            <form action="Search" method="get">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Search..." name="searchValue">
                    <button class="btn btn-primary">S</button>
                </div>
            </form>
        </div>
        <div class="col text-end">
            <a asp-action="AddUser" asp-controller="Roles" asp-route-role="@RolesContainer.MANAGER" class="btn btn-primary">Add manager</a>
        </div>
    </div>
    <div class="row">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">UserName</th>
                    <th scope="col">Role</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.Managers)
                {
                    <tr>
                        <th>@user.Id</th>
                        <td>@user.UserName</td>
                        <td>@RolesContainer.MANAGER</td>
                        <td class="text-end">
                            <a asp-action="RemoveUser" 
                            asp-route-userId="@user.Id" 
                            asp-route-role="@RolesContainer.MANAGER" 
                            class="btn btn-danger">Remove</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="row">
        <h3 class="mb-3">Administrators:</h3>
    </div>
    <div class="row">
        <div class="col-4">
            <form action="Search" method="get">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Search..." name="searchValue">
                    <button class="btn btn-primary">S</button>
                </div>
            </form>
        </div>
        <div class="col text-end">
            <a asp-action="AddUser" asp-controller="Roles" asp-route-role="@RolesContainer.ADMINISTRATOR" class="btn btn-primary">Add admin</a>
        </div>
    </div>
    <div class="row">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">UserName</th>
                    <th scope="col">Role</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.Admins)
                {
                    <tr>
                        <th>@user.Id</th>
                        <td>@user.UserName</td>
                        <td>@RolesContainer.ADMINISTRATOR</td>
                        <td class="text-end">
                            <a asp-action="RemoveUser"
                               asp-route-userId="@user.Id"
                               asp-route-role="@RolesContainer.ADMINISTRATOR"
                               class="btn btn-danger">Remove</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

