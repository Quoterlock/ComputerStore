<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ComputerStore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ComputerStore.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/custom_styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/staff-menu.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light nav-fixed bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" style="font-weight:bold" asp-area="" asp-controller="Home" asp-action="Index">ComputerStore <span style="font-weight:normal">for Staff</span></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container" style="margin-top:60px">
        <div class="row">
            <div class="col-3">
                <div class="side-menu">
                    <a asp-area="Staff" asp-action="Index" asp-controller="Orders">
                        <div class="side-menu-item mb-2">
                            <img class="icon" height="24" width="24" src="~/icons/orders-icon.png">
                            Orders
                        </div>
                    </a>
                    <a asp-area="Staff" asp-action="Index" asp-controller="Items">
                        <div class="side-menu-item mb-2">
                            <img class="icon" height="24" width="24" src="~/icons/item-icon.png">
                            Items
                        </div>
                    </a>
                    <a asp-area="Staff" asp-action="Index" asp-controller="Categories">
                        <div class="side-menu-item mb-2">
                            <img class="icon" height="24" width="24" src="~/icons/category-icon.png">
                            Categories
                        </div>
                    </a>
                    <a asp-area="Staff" asp-action="Index" asp-controller="Roles">
                        <div class="side-menu-item mb2">
                            <img class="icon" height="24" width="24" src="~/icons/roles-icon.png">
                            Roles
                        </div>
                    </a>
                </div>
            </div>
            <div class="col">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - ComputerStore - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
