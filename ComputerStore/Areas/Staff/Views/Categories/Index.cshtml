@model List<ComputerStore.BusinessLogic.Domains.CategoryModel>
<a asp-action="Create" asp-controller="Categories">Create</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Category Name</th>
            <th scope="col">Image</th>
            <th scope="col">Edit</th>
            <th scope="col">Delete</th>
        </tr>
    </thead>
    <tbody>
        @for(int i = 0; i < Model.Count; i++)
        {
            <tr>
                <th scope="row">@i</th>
                <td>@Model[i].Name</td>
                <td>
                    @if (Model[i].Thumbnail.Bytes != null)
                    {
                        <img height="24" width="24"
                             alt="@Model[i].Thumbnail.Alt"
                             src="data:image/png;base64, @Convert.ToBase64String(Model[i].Thumbnail.Bytes)" />
                    }
                </td>
                <td><a class="btn btn-active" asp-area="Staff" 
                    asp-controller="Categories" 
                    asp-action="Edit" asp-route-id="@Model[i].Id">Edit</a></td>
                <td><a class="btn btn-active" 
                    asp-controller="Categories" 
                    asp-action="Delete" 
                    asp-route-id="@Model[i].Id">Delete</a></td>
            </tr>
        }
    </tbody>
</table>