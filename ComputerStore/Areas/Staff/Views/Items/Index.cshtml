@model List<ComputerStore.BusinessLogic.Domains.ItemModel>
<a asp-action="Create" asp-controller="Items">Create</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Image</th>
            <th scope="col">Details</th>
            <th scope="col">Edit</th>
            <th scope="col">Delete</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <th scope="row">@i</th>
                <td>@Model[i].Name</td>
                <td>
                    <img height="48" width="48"
                         alt="@Model[i].Image.Alt"
                         src="data:image/jpeg;base64, @Convert.ToBase64String(Model[i].Image.Bytes)" />
                </td>
                <td>
                    <a class="btn btn-active" asp-area="Staff"
                       asp-controller="Items"
                       asp-action="Details" asp-route-id="@Model[i].Id">Details</a>
                </td>
                <td>
                    <a class="btn btn-active" asp-area="Staff"
                       asp-controller="Items"
                       asp-action="Edit" asp-route-id="@Model[i].Id">Edit</a>
                </td>
                <td>
                    <a class="btn btn-active"
                       asp-controller="Items"
                       asp-action="Delete"
                       asp-route-id="@Model[i].Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
