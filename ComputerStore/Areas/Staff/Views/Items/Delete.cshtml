@model ComputerStore.BusinessLogic.Domains.ItemModel

<h3>Are you shure you want to delete this item?</h3>
<h1>@Model.Name</h1>
<a class="btn btn-light" asp-action="Index">Cancel</a>
<form asp-action="DeleteConfirmed" asp-area="Staff" asp-controller="Items" method="post">
    <input type="hidden" name="id" value="@Model.Id"/>
    <button class="btn btn-danger" type="submit" action="DeleteConfirmed">Delete</button>
</form>

